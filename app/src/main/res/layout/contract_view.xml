<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/contractView"
    class="org.sse.contracts.view.ContractView">

    <TextView
        android:id="@+id/contractText"
        style="@style/ContractView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/contract"
        android:lineSpacingExtra="8sp"
        android:padding="4dp"
        android:textStyle="normal"
        tools:text="Пример многострочного текста договора, например, договор купли-продажи чего-то там" />

    <include layout="@layout/permission_view"/>

</view>
