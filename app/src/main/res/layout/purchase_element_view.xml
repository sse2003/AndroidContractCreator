<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/purchaseView"
    class="org.sse.contracts.view.PurchaseElementView">


    <TextView
        android:id="@+id/purchaseDescriptionText"
        style="@style/PurchaseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/contract"
        android:lineSpacingExtra="8sp"
        android:padding="4dp"
        android:textStyle="normal"
        tools:text="Пример многострочного текста договора, например, договор купли-продажи чего-то там" />


    <ImageView
        android:id="@+id/permissionImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_menu_unlock_full" />

    <TextView
        android:id="@+id/purchaseCostText"
        style="@style/PurchaseView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0"
        android:background="@drawable/contract"
        android:lineSpacingExtra="8sp"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="99 руб" />

</view>
